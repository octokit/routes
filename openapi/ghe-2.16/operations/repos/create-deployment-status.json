    {
      "lang": "Shell",
      "source": "curl \\\n  -XPOST \\\n  -H\"Accept: application/vnd.github.v3+json\" \\\n  http://{hostname}/repos/octocat/hello-world/deployments/42/statuses \\\n  -d '{\"state\":\"state\"}'"
    },
    {
      "lang": "JS",
      "source": "octokit.repos.createDeploymentStatus({\n  owner: 'octocat',\n  repo: 'hello-world',\n  deployment_id: 42,\n  state: 'state'\n})"
