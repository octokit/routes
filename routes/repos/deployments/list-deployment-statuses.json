{
  "name": "List deployment statuses",
  "enabledForApps": true,
  "method": "GET",
  "path": "/repos/:owner/:repo/deployments/:id/statuses",
  "params": [
    {
      "name": "owner",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    },
    {
      "name": "repo",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    },
    {
      "name": "id",
      "type": "integer",
      "description": "The deployment ID to list the statuses from.",
      "required": true,
      "location": "url"
    },
    {
      "name": "per_page",
      "type": "integer",
      "required": false,
      "description": "Results per page (max 100)",
      "default": 30,
      "location": "query"
    },
    {
      "name": "page",
      "type": "integer",
      "required": false,
      "description": "Page number of the results to fetch.",
      "default": 1,
      "location": "query"
    }
  ],
  "description": "Users with pull access can view deployment statuses for a deployment:",
  "documentationUrl": "https://developer.github.com/v3/repos/deployments/#list-deployment-statuses"
}
